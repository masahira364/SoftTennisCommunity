
<div class="form-horizontal">

<h4>検索フォーム</h4>

<%= search_form_for(@q, url:search_path) do |f| %>
	<div class="form-group">
		<%= f.label :prefecture_code_eq, "都道府県", class: "col-xs-1" %>
		<%= f.collection_select :prefecture_code_eq, JpPrefecture::Prefecture.all, :code, :name, include_blank: "指定なし" %>
	</div>
	<div class="form-group">
		<%= f.label :number_of_people_gteq, "人数", class: "col-xs-1" %>
		<%= f.select :number_of_people_gteq, {"1人以上": 1, "5人以上": 5, "10人以上": 10, "20人以上": 20, "30人以上": 30, "40人以上": 40, "50人以上": 50,}, {include_blank: "指定なし"} %>
	</div>
	<div class="form-group">
		<%= f.label :name_cont, "チーム名", class: "col-xs-1" %>
		<%= f.search_field :name_cont %>
	</div>
	<div class="form-group">
		<%= f.submit "検索", class: "btn btn-primary col-xs-offset-1" %>
	</div>
<% end %>
</div>