<div class="container">
	<h1 class="page-title text-center"><%= @team.name %> のメンバー一覧</h1>

	<table class="table">
		<thead>
			<tr class="success">
				<th class="col-xs-2"></th>
				<th>性別</th>
				<th>ポジション</th>
			</tr>
		</thead>
		<tbody>
			<% @team.users.each do |user| %>
				<tr>
					<td><%= attachment_image_tag(@user, :profile_image, fallback: 'sports_soft_tennis_ball.png', size: '50x50') %>
						<%= link_to user.nickname, user_path(user) %></td>
					<td><%= user.sex %></td>
					<td><%= user.position %></td>
				</tr>
			<% end %>
		</tbody>
	</table>

	<div class="row text-center">
		<%= link_to "Back", team_path(@team), class: "btn btn-primary" %>
	</div>
</div>