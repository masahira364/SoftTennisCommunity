<h1 class="text-center"><%= @article.title %></h1>

<p><%= @article.created_at.strftime("%Y-%m-%d %H:%M") %></p>

	<div class="row">
		<div class="article_body">
			<%= @article.body %>
		</div>
	</div>

	<% @article.comments.each do |comment| %>
		<%= attachment_image_tag(@user, :profile_image, size: '50x50') %>
		<%= comment.user.nickname %>
		<%= comment.comment %>
		<%= comment.created_at.strftime("%Y-%m-%d %H:%M") %>
		<% if current_user.id == comment.user_id %>
			<%= link_to "コメント削除", article_comment_path(comment.article, comment), method: :delete %>
		<% end %>
	<% end %>

	<%= form_with model: [@article, @comment] do |f| %>
		<%= f.text_area :comment %>
		<%= f.submit "コメント投稿" %>
	<% end %>


	
	<% if @article.team_id == current_user.team_id %>
	<div class="row">
		<div class="text-center">
			<%= link_to "投稿編集", edit_article_path(@article), class: "btn btn-success" %>
			<%= link_to "投稿削除", article_path(@article), method: :delete, class: "btn btn-danger", data: {confirm: "本当に削除してもよろしいですか？"} %>
		</div>
	</div>
	<% end %>
