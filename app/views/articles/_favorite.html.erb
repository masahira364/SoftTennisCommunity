<% if article.favorite_by?(current_user) %>
	<%= link_to article_favorite_path(article.id), method: :delete, remote: true do %>
		<%= icon "fas", "thumbs-up" %>
	<% end %>
<% else %>
	<%= link_to article_favorites_path(article.id), method: :post, remote: true do %>
		<%= icon "far", "thumbs-up" %>
	<% end %>
<% end %>
