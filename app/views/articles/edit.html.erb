<% if @article.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(@article.errors.count, "error") %> prohibited this obj from being saved:</h3>

      <ul>
      <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
<% end %>

<div class="text-center">
	<h3>投稿編集</h3>
</div>

<div class="row">
	<div class="col-xs-8 col-xs-offset-4">

		<div class="form-horizontal">

			<%= form_with model: @article, local: true do |f| %>

				<div class="form-group">
				      <%= f.label :image, "画像", class: "col-xs-3" %>
				      <div class="col-xs-3">
				        <%= f.attachment_field :image %>
				      </div>
				    </div>

				    <div class="form-group">
				      <%= f.label :title, "タイトル", class: "col-xs-3" %>
				      <div class="col-xs-3">
				        <%= f.text_field :title, class: "form-control" %>
				      </div>
				    </div>

				    <div class="form-group">
				      <%= f.label :body, "投稿内容", class: "col-xs-3" %>
				      <div class="col-xs-6">
				        <%= f.text_field :body, class: "form-control", style: "height: 200px;" %>
				      </div>
				    </div>

				    <div class="form-group">
				    	<div class="col-xs-3 col-xs-offset-3">
				          <%= f.submit "更新", class: "btn btn-success btn-block" %>
				        </div>
				    </div>

			<% end %>
		</div>
	</div>
</div>