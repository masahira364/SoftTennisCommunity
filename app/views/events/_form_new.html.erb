<div id="inputScheduleForm" class="modal fade" tabindex="-1">
	<div class="modal-dialog modal-nm">
    	<div class="modal-content">
        	<div class="modal-header">
				<h1 class="modal-title text-center">予定登録</h1>
				<button type="button" class="close" data-dismiss="modal"><span>×</span></button>
			</div>

			<div class="row">
				<div class="col-xs-offset-2">
					<div class="form-horizontal">
						<div class="modal-body">
							<%= form_with model: event, url: new_event_path do |f| %>
								<%= f.hidden_field :team_id, :value => params[:team_id] %>

								<div class="form-group">
									<%= f.label :title, "件名", class: "col-xs-2" %>
									<div class="col-xs-7">
										<%= f.text_field :title, class: "form-control" %>
									</div>
								</div>

								<div class="form-group">
									<%= f.label :description, "詳細", class: "col-xs-2" %>
									<div class="col-xs-7">
										<%= f.text_area :description, class: "form-control", style: "height: 300px;"  %>
									</div>
								</div>

								<div class="form-group">
									<%= f.label :start_date, "開始日時", class: "col-xs-2" %>
									<div class="col-xs-7">
										<%= f.datetime_select :start_date, {default: Date.today + 00.hours + 00.minutes, use_month_numbers: true, minute_step: 10}  %>
									</div>
								</div>

								<div class="form-group">
									<%= f.label :end_date, "終了日時", class: "col-xs-2" %>
									<div class="col-xs-7">
										<%= f.datetime_select :end_date, {default: Date.today + 00.hours + 00.minutes, use_month_numbers: true, minute_step: 10}  %>
									</div>
								</div>
							</div>

						<div class="modal-footer">
							<div class="form-group">
								<div class="col-xs-5">
									<%= f.submit "登録", class: "btn btn-success btn-block" %>
								</div>
								<div class="col-xs-5">
									<button type="button" class="btn btn-default btn-block" data-dismiss="modal">閉じる</button>
								</div>
							</div>
						</div>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>