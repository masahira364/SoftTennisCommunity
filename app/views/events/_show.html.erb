<% events.each do |event| %>
	<div id='modalEvent<%= event.id %>' class="modal fade" tabindex="-1">
	    <div class="modal-dialog modal-nm">
	        <div class="modal-content">
	            <div class="modal-header">
					<h2 class="text-center">予定詳細</h2>
					<button type="button" class="close" data-dismiss="modal"><span>×</span></button>
				</div>

				<div class="modal-body">
					<div class="row">
						<div class="col-xs-offset-3 col-xs-6">
							<table class="table table-bordered">
								<tr>
									<th class="info">件名</th>
									<th><%= event.title %></th>
								</tr>
								<tr>
									<th class="info">詳細</th>
									<th><%= event.description %></th>
								</tr>
								<tr>
									<th class="info">参加人数</th>
									<th><%= event.entries.count %>人</th>
								</tr>
								<tr>
									<th class="info">開始日時</th>
									<th><%= event.start_date.strftime('%Y-%m-%d %H:%M') %></th>
								</tr>
								<tr>
									<th class="info">終了日時</th>
									<th><%= event.end_date.strftime('%Y-%m-%d %H:%M') %></th>
								</tr>
							</table>
						</div>
					</div>
				</div>

				<div class="modal-footer">
					<div class="row button-group">
						<div class="col-xs-5 col-xs-offset-1">
							<!-- 参加ボタン -->
							<div id="entry_<%= event.id %>">
								<%= render 'entry', event: event %>
							</div>
						</div>
						<div class="col-xs-5">
							<button type="button" class="btn btn-default btn-block" data-dismiss="modal">閉じる</button>
						</div>
					</div>

					<% if current_user.team_id == event.team_id %>
						<div class="row button-group">
							<div class="col-xs-5 col-xs-offset-1">
								<%= link_to "予定編集", edit_event_path(event), class: "btn btn-success btn-block" %>
							</div>
							<div class="col-xs-5">
								<%= link_to "予定削除", event_path(event), method: :delete, class: "btn btn-danger btn-block", data: {confirm: "本当に削除してもよろしいですか？"} %>
							</div>
						</div>
					<% end %>

					<h3 class="text-center">参加者一覧</h3>
					<% if event.entries.blank? %>
					  <h3 class="text-center">参加者はいません</h3>
					<% else %>
					  <table class="table">
					    <thead>
						  <tr class="success">
							<th class="col-xs-2"></th>
							<th>性別</th>
							<th>ポジション</th>
						  </tr>
						</thead>
						<tbody>
						  <% event.entries.each do |entry| %>
							<tr>
							  <td><%= attachment_image_tag(entry.user, :profile_image, fallback: 'sports_soft_tennis_ball.png', size: '50x50') %>
								  <%= link_to entry.user.nickname, user_path(entry.user) %></td>
							  <td><%= entry.user.sex %></td>
							  <td><%= entry.user.position %></td>
							</tr>
						  <% end %>
						</tbody>
					  </table>
					<% end %>
				</div>
			</div>
		</div>
	</div>
<% end %>