<h1 class="text-center">予定詳細</h1>

	<div class="row">
		<div class="col-xs-offset-4 col-xs-4">
			<table class="table table-bordered">
				<tr>
					<th class="info">件名</th>
					<th><%= @event.title %></th>
				</tr>
				<tr>
					<th class="info">詳細</th>
					<th><%= @event.description %></th>
				</tr>
				<tr>
					<th class="info">開始日時</th>
					<th><%= @event.start_date %></th>
				</tr>
				<tr>
					<th class="info">終了日時</th>
					<th><%= @event.end_date %></th>
				</tr>
			</table>
		</div>
	</div>

	<div class="row">
		<div class="text-center">
			<%= link_to "予定編集", edit_event_path(@event), class: "btn btn-success" %>
			<%= link_to "予定削除", event_path(@event), method: :delete, class: "btn btn-danger", data: {confirm: "本当に削除してもよろしいですか？"} %>
		</div>
	</div>
