<header class="navbar navbar-fixed-top">
        <nav>
          <ul class="nav navbar-nav navbar-left text-left">
           <li><%= link_to root_path do %>
               <div class="header-logo"></div>
               <% end %>
           </li>
         </ul>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
            <li><span class="login-name">ログイン：<%= current_user.nickname %>さん</span></li>
              <li>
                  <%= link_to notifications_path(user_id: current_user.id), style: "padding-right: 0;" do %>
                    <!-- 未確認の通知があるか判定 -->
                    <% if unchecked_notifications.any? %>
                      <span class="fa-stack">
                        <%= icon "far", "bell", class: "fa-stack-2x fa-lg", style: "font-size :1.5em;" %>
                        <%= icon "fas", "circle", class: "n-circle fa-stack-1x", style: "font-size: 15px;" %>
                      </span>
                    <% else %>
                      <span>
                        <%= icon "far", "bell", class: "fa-lg", style: "font-size :1.5em;" %>
                      </span>
                    <% end %>
                    <p class="notification">通知</p>
                  <% end %>
              </li>
              <li></li>
              <li>
                  <%= link_to user_path(current_user) do %>
                    <span><%= icon 'far', 'address-book'%> マイページ </span>
                  <% end %>
              </li>
              <li>
                  <%= link_to teams_path do %>
                    <span><%= icon 'fas', 'search-location'%> チーム検索 </span>
                  <% end %>
              </li>
              <li>
                  <%= link_to articles_path do %>
                    <span><%= icon 'fas', 'book'%> チーム日記一覧 </span>
                  <% end %>
              </li>
              <li>
                  <%= link_to destroy_user_session_path, method: :delete do %>
                    <span><%= icon 'fas', 'sign-out-alt' %> ログアウト </span>
                  <% end %>
              </li>
            <% else %>
              <li>
                  <%= link_to new_user_registration_path do %>
                    <span> <%= icon 'fas', "sign-in-alt" %> 新規登録</span>
                  <% end %>
              </li>
              <li>
                  <%= link_to new_user_session_path do %>
                    <span><%= icon 'fas', 'door-open' %>ログイン</span>
                  <% end %>
              </li>
            <% end %>
          </ul>
        </nav>
    </header>