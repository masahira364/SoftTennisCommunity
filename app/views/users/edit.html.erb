<% if @user.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(@user.errors.count, "error") %> prohibited this obj from being saved:</h3>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
<% end %>

<div class="text-center">
	<h3>プロフィール編集</h3>
</div>

<div class="row">
	<div class="col-xs-8 col-xs-offset-4">

		<div class="form-horizontal">

			<%= form_with model: @user, local: true do |f| %>

				<div class="form-group">
					<%= f.label :profile_image_id, "プロフィール画像", class: "col-xs-3" %>
					<div class="col-xs-3">
						<div class="image">
					      	<%= attachment_image_tag(@user, :profile_image, fallback:  'sports_soft_tennis_ball.png', size: '100x100', class: "img-circle") %>
					      	<%= f.attachment_field :profile_image %>
				       </div>
				    </div>
				</div>

				<div class="form-group">
				      <label class="col-xs-3">性別</label>
				      <div class="col-xs-2">
				        <%= f.radio_button :sex, :男性 %>
				        <%= f.label :sex, "男性" %>
				      </div>
				      <div class="col-xs-2">
				        <%= f.radio_button :sex, :女性 %>
				        <%= f.label :sex, "女性" %>
				      </div>
				    </div>

				    <div class="form-group">
				      <%= f.label :nickname, "ニックネーム", class: "col-xs-3" %>
				      <div class="col-xs-3">
				        <%= f.text_field :nickname, class: "form-control" %>
				      </div>
				    </div>

				    <div class="form-group">
				      <%= f.label :email, "メールアドレス", class: "col-xs-3" %>
				      <div class="col-xs-3">
				        <%= f.email_field :email, class: "form-control" %>
				      </div>
				    </div>

				    <div class="form-group">
				      <%= f.label :postal_code, "郵便番号", class: "col-xs-3" %>
				      <div class="col-xs-3">
				        <%= f.text_field :postal_code, class: "form-control" %>
				      </div>
				    </div>

				    <div class="form-group">
				      <%= f.label :address, "住所", class: "col-xs-3" %>
				      <div class="col-xs-6">
				        <%= f.text_field :address, class: "form-control text-left" %>
				      </div>
				    </div>

				    <div class="form-group">
				      <%= f.label :position, "ポジション", class: "col-xs-3" %>
				      <div class="col-xs-3">
				        <%= f.text_field :position, class: "form-control" %>
				      </div>
				    </div>

				    <div class="form-group">
				      <%= f.label :racket, "ラケット", class: "col-xs-3" %>
				      <div class="col-xs-3">
				        <%= f.text_field :racket, class: "form-control" %>
				      </div>
				    </div>

				    <div class="form-group">
				      <%= f.label :good_play, "得意プレー", class: "col-xs-3" %>
				      <div class="col-xs-3">
				        <%= f.text_field :good_play, class: "form-control" %>
				      </div>
				    </div>

				    <div class="form-group">
				      <%= f.label :introduction, "自己紹介", class: "col-xs-3" %>
				      <div class="col-xs-6">
				        <%= f.text_area :introduction, class: "form-control", style: "height: 200px;" %>
				      </div>
				    </div>

				    <div class="form-group">
				    	<div class="col-xs-3 col-xs-offset-3">
				          <%= f.submit "更新", class: "btn btn-success btn-block" %>
				        </div>
				    </div>

			<% end %>
		</div>
	</div>
</div>