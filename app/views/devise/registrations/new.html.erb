

<div class="text-center">
<h2>新規登録</h2>
<%= render "devise/shared/error_messages", resource: resource %>
</div>

<%= link_to "facebook", user_facebook_omniauth_authorize_path %>
<%= link_to "google", user_google_oauth2_omniauth_authorize_path%>
<div class="row">
  <div class="col-xs-8 col-xs-offset-4">

<div class="form-horizontal">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    

    <div class="form-group">
              <label class="col-xs-3">性別</label>
              <div class="col-xs-2">
                <%= f.radio_button :sex, :男性 %>
                <%= f.label :sex, "男性" %>
              </div>
              <div class="col-xs-2">
                <%= f.radio_button :sex, :女性 %>
                <%= f.label :sex, "女性" %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :nickname, "ニックネーム", class: "col-xs-3" %>
              <div class="col-xs-3">
                <%= f.text_field :nickname, class: "form-control" %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :age, "年齢", class: "col-xs-3" %>
              <div class="col-xs-3">
                <%= f.number_field :age, class: "form-control" %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :email, "メールアドレス", class: "col-xs-3" %>
              <div class="col-xs-3">
                <%= f.email_field :email, class: "form-control" %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :postal_code, "郵便番号", class: "col-xs-3" %>
              <div class="col-xs-3">
                <%= f.text_field :postal_code, class: "form-control", id: 'user_postal_code' %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :prefecture_code, "都道府県", class: "col-xs-3" %>
              <div class="col-xs-3">
                <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :name, :name, include_blank: "都道府県", class: 'form-control', id: 'user_prefecture_code' %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :address, "住所", class: "col-xs-3" %>
              <div class="col-xs-6">
                <%= f.text_field :address, class: "form-control text-left", id: 'user_address' %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :position, "ポジション", class: "col-xs-3" %>
              <div class="col-xs-3">
                <%= f.text_field :position, class: "form-control" %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :racket, "ラケット", class: "col-xs-3" %>
              <div class="col-xs-3">
                <%= f.text_field :racket, class: "form-control" %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :good_play, "得意プレー", class: "col-xs-3" %>
              <div class="col-xs-3">
                <%= f.text_field :good_play, class: "form-control" %>
              </div>
            </div>

    <div class="form-group">
      <%= f.label :password, "パスワード(6文字以上)", class: "col-xs-3" %>
      <div class="col-xs-3">
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "パスワード確認", class: "col-xs-3" %>
      <div class="col-xs-3">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-xs-3 col-xs-offset-2">
          <%= f.submit "新規登録", class: "btn btn-success btn-block" %>
      </div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
</div>
</div>