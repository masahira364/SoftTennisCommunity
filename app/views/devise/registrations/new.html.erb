

<h2>新規登録</h2>

<div class="form-horizontal">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <label class="col-xs-2">性別</label>
      <div class="col-xs-1">
        <%= f.radio_button :sex, "男性", class: "text-left" %>
        <%= f.label :sex, "男性" %>
      </div>
      <div class="col-xs-1">
        <%= f.radio_button :sex, "女性" %>
        <%= f.label :sex, "女性" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :nickname, "ニックネーム", class: "col-xs-2" %>
      <%= f.text_field :nickname %>
    </div>

    <div class="form-group">
      <%= f.label :email, "メールアドレス", class: "col-xs-2" %>
      <%= f.email_field :email %>
    </div>

    <div class="form-group">
      <%= f.label :postal_code, "郵便番号", class: "col-xs-2" %>
      <%= f.text_field :postal_code %>
    </div>

    <div class="form-group">
      <%= f.label :address, "住所", class: "col-xs-2" %>
      <%= f.text_field :address %>
    </div>

    <div class="form-group">
      <%= f.label :position, "ポジション", class: "col-xs-2" %>
      <%= f.text_field :position %>
    </div>

    <div class="form-group">
      <%= f.label :racket, "ラケット", class: "col-xs-2" %>
      <%= f.text_field :racket %>
    </div>

    <div class="form-group">
      <%= f.label :good_play, "得意プレー", class: "col-xs-2" %>
      <%= f.text_field :good_play %>
    </div>

    <div class="form-group">
      <%= f.label :password, "パスワード(6文字以上)", class: "col-xs-2" %>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "パスワード確認", class: "col-xs-2" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="form-group">
      <%= f.submit "新規登録", class: "btn btn-success" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
