

<div class="text-center">
  <h1>新規登録</h1>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="sns-link">
    <h2>SNSでの登録はこちら</h2>
    <%= link_to user_facebook_omniauth_authorize_path do %>
      <%= icon "fab", "facebook" %>
    <% end %>

    <%= link_to user_google_oauth2_omniauth_authorize_path do %>
      <%= icon "fab", "google" %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-xs-8 col-xs-offset-4">

    <div class="form-horizontal">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        
        <div class="form-group">
          <%= f.label :nickname, "ニックネーム", class: "col-xs-3" %>
          <div class="col-xs-3">
            <%= f.text_field :nickname, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :email, "メールアドレス", class: "col-xs-3" %>
          <div class="col-xs-3">
            <%= f.email_field :email, class: "form-control" %>
          </div>
        </div>


        <div class="form-group">
          <%= f.label :password, "パスワード(6文字以上)", class: "col-xs-3" %>
          <div class="col-xs-3">
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "パスワード確認", class: "col-xs-3" %>
          <div class="col-xs-3">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-xs-3 col-xs-offset-2">
              <%= f.submit "新規登録", class: "btn btn-success btn-block" %>
              <%= link_to "=> ログインはこちら", new_session_path(resource_name), class: 'text-center' %>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>